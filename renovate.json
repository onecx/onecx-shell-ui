      "groupSlug": "angular-20-devdeps",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "platformAutomerge": true,
      "labels": ["dependencies", "automerge"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Block OneCX major updates - OneCX packages should stay on current major version",
      "matchPackagePatterns": ["^@onecx/"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Block all major updates globally - must be last rule",
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "minimumReleaseAge": null,
    "automerge": false
  },
  "timezone": "Europe/Vienna",
  "schedule": ["before 6am every weekday"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 8,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "enabledManagers": ["npm"],
  "platformAutomerge": true
