    },
    {
      "matchFiles": ["pre_loaders/angular-19/package.json"],
      "groupName": "Angular 19 Webpack",
      "matchPackageNames": ["webpack", "modify-source-webpack-plugin"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-19-webpack",
      "prPriority": 3,
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    },
    {
      "matchFiles": ["pre_loaders/angular-20/package.json"],
      "groupName": "Angular 20 Webpack",
      "matchPackageNames": ["webpack", "modify-source-webpack-plugin"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-20-webpack",
      "prPriority": 3,
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    },
    {
      "matchFiles": ["package.json"],
      "matchDepTypes": ["devDependencies"],
      "excludePackageNames": ["webpack", "modify-source-webpack-plugin"],
      "excludePackagePatterns": ["^@nx/", "^nx$", "^@onecx/", "^@angular/", "^@angular-devkit/"],
      "groupName": "Root DevDependencies",
      "groupSlug": "root-devdeps",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "platformAutomerge": true,
      "labels": ["dependencies", "automerge"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-18/package.json"],
      "matchDepTypes": ["devDependencies"],
      "excludePackageNames": ["webpack", "modify-source-webpack-plugin"],
      "excludePackagePatterns": ["^@nx/", "^nx$", "^@onecx/", "^@angular/", "^@angular-devkit/"],
      "groupName": "Angular 18 DevDependencies",
      "groupSlug": "angular-18-devdeps",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "platformAutomerge": true,
      "labels": ["dependencies", "automerge"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-19/package.json"],
      "matchDepTypes": ["devDependencies"],
      "excludePackageNames": ["webpack", "modify-source-webpack-plugin"],
      "excludePackagePatterns": ["^@nx/", "^nx$", "^@onecx/", "^@angular/", "^@angular-devkit/"],
      "groupName": "Angular 19 DevDependencies",
      "groupSlug": "angular-19-devdeps",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "platformAutomerge": true,
      "labels": ["dependencies", "automerge"],
