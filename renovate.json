    },
    {
      "matchFiles": ["package.json"],
      "groupName": "Root Webpack",
      "matchPackageNames": ["webpack", "modify-source-webpack-plugin"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "root-webpack",
      "prPriority": 3,
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    },
    {
      "matchFiles": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 Webpack",
      "matchPackageNames": ["webpack", "modify-source-webpack-plugin"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-18-webpack",
      "prPriority": 3,
