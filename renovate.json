{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "minimumReleaseAge": "30 days",
  "includePaths": [
    "package.json",
    "pre_loaders/**/package.json"
  ],
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "packageRules": [
    {
      "matchFiles": ["package.json"],
      "groupName": "Root Angular",
      "matchPackagePatterns": ["^@angular/", "^@angular-devkit/"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "excludePackagePatterns": ["^@nx/", "^@onecx/"],
      "excludePackageNames": ["nx"],
      "groupSlug": "root-angular",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 Loader",
      "matchPackagePatterns": ["^@angular/", "^@angular-devkit/"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "excludePackagePatterns": ["^@nx/", "^@onecx/"],
      "excludePackageNames": ["nx"],
      "groupSlug": "angular-18-loader",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-19/package.json"],
      "groupName": "Angular 19 Loader",
      "matchPackagePatterns": ["^@angular/", "^@angular-devkit/"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "excludePackagePatterns": ["^@nx/", "^@onecx/"],
      "excludePackageNames": ["nx"],
      "groupSlug": "angular-19-loader",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-20/package.json"],
      "groupName": "Angular 20 Loader",
      "matchPackagePatterns": ["^@angular/", "^@angular-devkit/"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "excludePackagePatterns": ["^@nx/", "^@onecx/"],
      "excludePackageNames": ["nx"],
      "groupSlug": "angular-20-loader",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["package.json"],
      "groupName": "Root NX",
      "matchPackagePatterns": ["^@nx/", "^nx$"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "root-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      }
    },
    {
      "matchFiles": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 NX",
      "matchPackagePatterns": ["^@nx/", "^nx$"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-18-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      }
    },
    {
      "matchFiles": ["pre_loaders/angular-19/package.json"],
      "groupName": "Angular 19 NX",
      "matchPackagePatterns": ["^@nx/", "^nx$"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-19-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      }
    },
    {
      "matchFiles": ["pre_loaders/angular-20/package.json"],
      "groupName": "Angular 20 NX",
      "matchPackagePatterns": ["^@nx/", "^nx$"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-20-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      }
    },
    {
      "matchFiles": ["package.json"],
      "groupName": "Root OneCX Libraries",
      "matchPackagePatterns": ["(^@onecx/)|(nx-plugin$)"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "root-onecx",
      "prPriority": 9,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "description": "OneCX packages: only minor updates, no patch updates to avoid breaking changes",
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "for pkg in {{{#each upgrades}}}{{depName}}@{{newVersion}} {{/each}}]; do npx nx migrate $pkg; done",
          "npm install",
          "NX_MIGRATE_SKIP_INSTALL=true npx nx migrate --run-migrations --if-exists"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      }
    },
    {
      "matchFiles": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 OneCX Libraries",
      "matchPackagePatterns": ["(^@onecx/)|(nx-plugin$)"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-18-onecx",
      "prPriority": 9,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "description": "OneCX packages: only minor updates, no patch updates to avoid breaking changes",
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "for pkg in {{{#each upgrades}}}{{depName}}@{{newVersion}} {{/each}}]; do npx nx migrate $pkg; done",
          "npm install",
          "NX_MIGRATE_SKIP_INSTALL=true npx nx migrate --run-migrations --if-exists"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      }
    },
    {
      "matchFiles": ["pre_loaders/angular-19/package.json"],
      "groupName": "Angular 19 OneCX Libraries",
      "matchPackagePatterns": ["(^@onecx/)|(nx-plugin$)"],
      "matchDepTypes": ["dependencies", "devDependencies"],
