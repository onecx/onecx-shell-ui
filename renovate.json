    },
    {
      "matchFileNames": ["package.json"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "Root DevDependencies",
      "groupSlug": "root-devdeps",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "platformAutomerge": true,
      "labels": ["dependencies", "automerge"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "!webpack",
        "!modify-source-webpack-plugin",
        "!/^@nx//",
        "!/^nx$/",
        "!/^@onecx//",
        "!/^@angular//",
        "!/^@angular-devkit//"
      ]
    },
    {
      "matchFileNames": ["pre_loaders/angular-18/package.json"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "Angular 18 DevDependencies",
      "groupSlug": "angular-18-devdeps",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "platformAutomerge": true,
      "labels": ["dependencies", "automerge"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "!webpack",
        "!modify-source-webpack-plugin",
        "!/^@nx//",
        "!/^nx$/",
