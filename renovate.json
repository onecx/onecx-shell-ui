      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFileNames": ["pre_loaders/angular-20/package.json"],
      "groupName": "Angular 20 Module Federation",
      "matchPackageNames": [
        "@angular-architects/module-federation",
        "@angular-architects/module-federation-tools"
      ],
