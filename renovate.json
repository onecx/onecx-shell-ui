    {
      "matchFiles": ["package.json"],
      "groupName": "Root Angular Architects Module Federation",
      "matchPackageNames": [
        "@angular-architects/module-federation",
        "@angular-architects/module-federation-tools"
      ],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "root-module-federation",
      "prPriority": 5,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 Module Federation",
      "matchPackageNames": [
        "@angular-architects/module-federation",
        "@angular-architects/module-federation-tools"
      ],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-18-module-federation",
      "prPriority": 5,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-19/package.json"],
      "groupName": "Angular 19 Module Federation",
      "matchPackageNames": [
        "@angular-architects/module-federation",
        "@angular-architects/module-federation-tools"
      ],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-19-module-federation",
      "prPriority": 5,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFiles": ["pre_loaders/angular-20/package.json"],
      "groupName": "Angular 20 Module Federation",
      "matchPackageNames": [
        "@angular-architects/module-federation",
        "@angular-architects/module-federation-tools"
      ],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-20-module-federation",
      "prPriority": 5,
