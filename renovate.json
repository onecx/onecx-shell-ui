{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "minimumReleaseAge": "30 days",
  "includePaths": ["package.json", "pre_loaders/**/package.json"],
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "packageRules": [
    {
      "matchFileNames": ["package.json"],
      "groupName": "Root Angular",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "root-angular",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "/^@angular//",
        "/^@angular-devkit//",
        "!/^@nx//",
        "!/^@onecx//",
        "!nx"
      ]
    },
    {
      "matchFileNames": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 Loader",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-18-loader",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "/^@angular//",
        "/^@angular-devkit//",
        "!/^@nx//",
        "!/^@onecx//",
        "!nx"
      ]
    },
    {
      "matchFileNames": ["pre_loaders/angular-19/package.json"],
      "groupName": "Angular 19 Loader",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-19-loader",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "/^@angular//",
        "/^@angular-devkit//",
        "!/^@nx//",
        "!/^@onecx//",
        "!nx"
      ]
    },
    {
      "matchFileNames": ["pre_loaders/angular-20/package.json"],
      "groupName": "Angular 20 Loader",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-20-loader",
      "prPriority": 10,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "/^@angular//",
        "/^@angular-devkit//",
        "!/^@nx//",
        "!/^@onecx//",
        "!nx"
      ]
    },
    {
      "matchFileNames": ["package.json"],
      "groupName": "Root NX",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "root-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      },
      "matchPackageNames": ["/^@nx//", "/^nx$/"]
    },
    {
      "matchFileNames": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 NX",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-18-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      },
      "matchPackageNames": ["/^@nx//", "/^nx$/"]
    },
    {
      "matchFileNames": ["pre_loaders/angular-19/package.json"],
      "groupName": "Angular 19 NX",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-19-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      },
      "matchPackageNames": ["/^@nx//", "/^nx$/"]
    },
    {
      "matchFileNames": ["pre_loaders/angular-20/package.json"],
      "groupName": "Angular 20 NX",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-20-nx",
      "prPriority": 8,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "npx nx migrate {{{newVersion}}} --from={{{currentVersion}}}",
          "npm install",
          "npx nx migrate --run-migrations"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      },
      "matchPackageNames": ["/^@nx//", "/^nx$/"]
    },
    {
      "matchFileNames": ["package.json"],
      "groupName": "Root OneCX Libraries",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "root-onecx",
      "prPriority": 9,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "description": "OneCX packages: only minor updates, no patch updates to avoid breaking changes",
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "for pkg in {{{#each upgrades}}}{{depName}}@{{newVersion}} {{/each}}]; do npx nx migrate $pkg; done",
          "npm install",
          "NX_MIGRATE_SKIP_INSTALL=true npx nx migrate --run-migrations --if-exists"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      },
      "matchPackageNames": ["/(^@onecx/)|(nx-plugin$)/"]
    },
    {
      "matchFileNames": ["pre_loaders/angular-18/package.json"],
      "groupName": "Angular 18 OneCX Libraries",
      "matchDepTypes": ["dependencies", "devDependencies"],
      "groupSlug": "angular-18-onecx",
      "prPriority": 9,
      "schedule": ["before 6am every weekday"],
      "matchUpdateTypes": ["minor", "patch"],
      "description": "OneCX packages: only minor updates, no patch updates to avoid breaking changes",
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "for pkg in {{{#each upgrades}}}{{depName}}@{{newVersion}} {{/each}}]; do npx nx migrate $pkg; done",
          "npm install",
          "NX_MIGRATE_SKIP_INSTALL=true npx nx migrate --run-migrations --if-exists"
        ],
        "fileFilters": ["**/*", "!node_modules/**"],
        "executionMode": "branch"
      },
      "matchPackageNames": ["/(^@onecx/)|(nx-plugin$)/"]
    },
    {
